html
  head
    title OpenShift Pipeline
    link(rel="stylesheet" href="/static/stylesheets/bootstrap-4.0.0-beta.2.min.css")
  body
    main.container(role="main")
      div.row
        div.col-3 #
        div.col-3
            h1 test
        div.col-3
            h1 pilot
        div.col-3
            h1 prod
      each commit in commits
        div.row
            div.col-3=commit.commitHash + " " + commit.commitMessage
            div.col-3
              if commit.environments.test
                each cluster in commit.environments.test.clusters
                  b=cluster.name
                  if (cluster.pods.length !== 0)
                    each pod in cluster.pods
                      div=pod.name
                  else
                    btn.btn.btn-primary.btn-sm deploy
            div.col-3
              if commit.environments.pilot
                each cluster in commit.environments.pilot.clusters
                  b=cluster.name
                  if (cluster.pods.length !== 0)
                    each pod in cluster.pods
                      div=pod.name
                  else
                    btn.btn.btn-primary.btn-sm deploy
            div.col-3
              if commit.environments.prod
                each cluster in commit.environments.prod.clusters
                  b=cluster.name
                  if (cluster.pods.length !== 0)
                    each pod in cluster.pods
                      div=pod.name
                  else
                    btn.btn.btn-primary.btn-sm deploy
        div.row
          div.col-3
            hr
          div.col-3
            hr
          div.col-3
            hr
          div.col-3
            hr
